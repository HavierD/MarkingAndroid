    </TableLayout>

    <Button
        android:id="@+id/shareBtnSS1"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="@string/shareButton"
        app:backgroundTint="@color/green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/modifyBtnSS"
        app:layout_constraintTop_toBottomOf="@+id/modifyBtnSS" />

    <Button
        android:id="@+id/modifyBtnSS"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="@string/modifyButton"
        app:layout_constraintEnd_toEndOf="@+id/removeBtnSS"
        app:layout_constraintTop_toBottomOf="@+id/removeBtnSS" />

    <Button
        android:id="@+id/removeBtnSS"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:text="@string/removeButton"
        app:backgroundTint="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentTitle1" />

    <Button
        android:id="@+id/backToWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        app:backgroundTint="@color/grey"
        app:layout_constraintBottom_toTopOf="@+id/info"
        app:layout_constraintStart_toStartOf="@+id/tableLayout" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout">

        <TextView
            android:id="@+id/SingleSummaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/summary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/singleSummaryMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp" />
    </LinearLayout>

